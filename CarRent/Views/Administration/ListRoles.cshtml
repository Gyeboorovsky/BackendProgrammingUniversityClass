@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title= "Manage roles";
}

<h1 style="text-align: center">Manage roles</h1>
<br />

@if (Model.Any())
{
    foreach(var role in Model)
    {
        <div class="card mb-4">
            <div class="card-header">
                Role Id : @role.Id
            </div>

            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>

            <div class="card-footer">
                <a class="btn btn-primary" asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id">Edit</a>
                <a class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
     <div class="card">
        <div class="card-header">
            There are no roles defined
        </div>
        <div class="card-body">
            <a class="btn btn-primary" style="width: auto" asp-controller="administration" asp-action="CreateRole">
                Create role
            </a>
        </div>
    </div>  
}
